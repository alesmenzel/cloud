{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "lib": [
      "DOM",
      "ESNext",
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "./coverage/",
    "./dist/",
  ],
}
