{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "jsx": "react-jsx",
    "declarationMap": true,
    "lib": [
      "DOM",
      "ESNext",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "./coverage/",
    "./dist/",
  ],
}
